<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignupPasswordActivity" android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Write strong password."
            android:textSize="32sp"
            android:layout_marginTop="100dp"
            android:textColor="#111"/>

    <EditText
            android:id="@+id/signup_firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textColor="#111"
            android:textColorHint="#111"
            android:maxLines="1"
            android:padding="8dp"
            android:background="@android:color/transparent"
            android:inputType="textPassword"
            android:layout_marginTop="50dp"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#111"/>

    <EditText
            android:id="@+id/signup_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:textColor="#111"
            android:textColorHint="#111"
            android:maxLines="1"
            android:padding="8dp"
            android:background="@android:color/transparent"
            android:inputType="textPassword"
            android:layout_marginTop="20dp"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#111"/>

    <Button
            android:id="@+id/next_pass_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_marginTop="20dp"/>
</LinearLayout>