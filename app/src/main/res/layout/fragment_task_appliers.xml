<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
                name="task"
                type="com.example.user.jobche.Task"/>
        <variable
                name="viewModel"
                type="com.example.user.jobche.TaskAppliersViewModel"/>
    </data>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragment_container">

        <View android:layout_width="match_parent" android:layout_height="2dp"
              android:background="@android:color/white"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{task.title}"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_white_24dp"
                android:background="@color/colorPrimary"
                android:onClick="@{() -> viewModel.onTaskClick()}"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textAlignment="viewStart"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
        />

        <android.support.v7.widget.RecyclerView
                android:id="@+id/listOfAppliers"
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </FrameLayout>
</layout>
